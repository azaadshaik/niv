                           <canvas id="engagementChart"></canvas>
                      </div>
                      <div id="canvas-holder col-md-4" style="width: 33% !important;">
                           <canvas id="attentionChart"></canvas>
                      </div>
                  
                  </div>
                </div>
              </div>

              
              <div class="row">
              <div class="col-md-2">
                <button class="btn btn-primary"><a href="{{profiledata.forms.0.form_link}}">Report</a></button>
              </div>
              </div>

                 {% endif %}

            
     
      
       <!-- previous reports ends-->
    </div>

<script src="https://unpkg.com/chart.js@2.8.0/dist/Chart.bundle.js"></script>
  <script src="https://unpkg.com/chartjs-gauge@0.3.0/dist/chartjs-gauge.js"></script>
    
  <script type="text/javascript">
  getPerformanceIndex({{profiledata.indexValues.attentionIndex}},'Attention Index','attentionChart');
   getPerformanceIndex({{profiledata.indexValues.engagementIndex}},'Engagement Index','engagementChart');
    getPerformanceIndex({{profiledata.indexValues.performanceIndex}},'Performance Index','performanceChart');
  
  function getPerformanceIndex(value,titleText,chartId){

        
            
            
            
            var value = value;
            
            var config = {
              type: 'gauge',
              data: {
                //labels: ['Success', 'Warning', 'Warning', 'Error'],
                datasets: [{
                  data: [412,525,638,751,800],
                  value: value,
                  minValue: 0,
                  backgroundColor: ['#FF0000', '#FF4500', '#FFA500', '#90EE90','#2E8B57'],
                  borderWidth: 2
                }]
              },
              options: {
            
                labels: {
                                // This more specific font property overrides the global property
                                font: {
                                    size: 50
                                }
                            },
                aspectRatio: 1,            
                responsive: true,
                maintainAspectRatio: true,
                title: {
                  display: true,
                  text: titleText
                },
                layout: {
                  padding: {
                    bottom: 30
                  }
                },
                needle: {
                  // Needle circle radius as the percentage of the chart area width
                  radiusPercentage: 2,
                  // Needle width as the percentage of the chart area width
                  widthPercentage: 3.2,
                  // Needle length as the percentage of the interval between inner radius (0%) and outer radius (100%) of the arc
                  lengthPercentage: 80,
                  // The color of the needle
                  color: 'rgba(0, 0, 0, 1)'
                },
                valueLabel: {
                  formatter: Math.round,
                  color: 'rgba(255, 255, 255, 1)',
                  backgroundColor: 'rgba(0, 0, 0, 1)',
                  borderRadius: 5,
                  padding: {
                    top: 10,
                    bottom: 10
                  },
                 
            
                }
              }
            };
            
          //  window.onload = function() {
              var ctx = document.getElementById(chartId).getContext('2d');
              window.myGauge = new Chart(ctx, config);
           // };



          }
  



  </script>